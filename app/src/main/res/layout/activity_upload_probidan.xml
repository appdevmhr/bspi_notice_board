<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadProbidan">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#2E7D32"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/probidan22"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#2E7D32"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <EditText

                    android:id="@+id/Probidan_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:hint="Enter The Name"
                    android:textColor="#F1F1F1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/Probidan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:hint="Enter The Date"
                    android:textAlignment="center"
                    android:textColor="#F1F1F1"
                    android:textSize="20sp" />

                <EditText

                    android:id="@+id/Probidan_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Enter The Description"
                    android:textAlignment="center"
                    android:textColor="#F1F1F1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Probidan_Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:ems="10"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="Done"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#F4F3F3"
                    android:textColorHint="#00695C"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>